<Page x:Class="WpfApp1.Windows.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center" >
            <Label Content="Authorize" HorizontalContentAlignment="Center" FontSize="36" />
            <TextBox Height="30" x:Name="name"/>
            <TextBox Height="30" x:Name="pass"/>
            <Button Content="login" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Page>
